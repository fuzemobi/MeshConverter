# MeshConverter Environment Variables
# Copy this file to local.env and fill in your API keys

# =============================================================================
# AI Engine Configuration (Optional)
# =============================================================================
# Uncomment and configure if using AI-based shape detection/classification

# OpenAI API Configuration
# Used for: GPT-based shape classification, geometry analysis
# Get your key at: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_MODEL=gpt-4
# OPENAI_MAX_TOKENS=2000

# Anthropic Claude API Configuration
# Used for: Advanced geometry reasoning, parameter optimization
# Get your key at: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229
# ANTHROPIC_MAX_TOKENS=4000

# =============================================================================
# Processing Configuration
# =============================================================================

# Mesh simplification target (number of faces)
# Lower = faster processing, less detail
# Higher = slower processing, more detail
MESH_SIMPLIFICATION_TARGET=1000

# Shape detection confidence threshold (0.0 - 1.0)
# Higher = stricter detection, fewer false positives
SHAPE_DETECTION_CONFIDENCE=0.85

# Enable debug mode (saves intermediate results)
DEBUG_MODE=false

# Output directory for processed files
OUTPUT_DIR=./output

# =============================================================================
# Performance Tuning
# =============================================================================

# Maximum file size to process (in MB)
MAX_FILE_SIZE_MB=100

# Enable parallel processing for batch operations
ENABLE_PARALLEL_PROCESSING=true

# Number of CPU cores to use (0 = auto-detect)
NUM_CORES=0

# =============================================================================
# AI-Enhanced Features (Future)
# =============================================================================

# Enable AI-based shape classification
# Requires: OPENAI_API_KEY or ANTHROPIC_API_KEY
ENABLE_AI_SHAPE_CLASSIFICATION=false

# Enable AI-based parameter optimization
# Uses AI to refine detected dimensions
ENABLE_AI_PARAMETER_OPTIMIZATION=false

# Enable AI-based feature detection
# Detects holes, threads, mounting points automatically
ENABLE_AI_FEATURE_DETECTION=false

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=

# Enable detailed geometry logging
LOG_GEOMETRY_DETAILS=true
